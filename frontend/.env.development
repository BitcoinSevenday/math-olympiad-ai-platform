# 开发环境配置
VITE_APP_TITLE="奥赛AI平台 - 开发环境"
VITE_APP_VERSION="1.0.0"
VITE_API_BASE_URL="http://localhost:8000"
VITE_APP_MODE="development"
VITE_ENABLE_MOCK="false"  # 是否启用Mock数据

